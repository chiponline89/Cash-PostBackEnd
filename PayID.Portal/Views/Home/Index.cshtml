<script>
    $(document).ready(function () {
        
        Quantity();
    });
    function Quantity() {        
        $.ajax({
            url: '@Url.Content("~/Home/Quantity")',
            contentType: 'application/html; charset=utf-8',
            type: 'POST',
            dataType: 'json'
        })
        .success(function (data) {            
            $('#idC1').text(data.C1);
            $('#idC5').text(data.C5);
            $('#idC6').text(data.C6);
            $('#idC8').text(data.C8);
        })
    }
</script>