@model List<PayID.Portal.Models.BusinessProfile>

<div class="modal-header" style="padding:14px !important;">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h2 class="modal-title">Danh sách khách hàng</h2>
</div>
<div class="modal-body" style="padding:1px !important;">
    <div class="table-responsive">
        <table id="tblcontent" class="table table-striped table-bordered datatables dataTable no-footer">
            <thead>
                <tr class="tr_head">
                    <td style="width:15px;">
                        #
                    </td>
                    <td>
                        Thông tin Khách hàng
                    </td>
                    <td style="width:50px;"></td>
                </tr>
            </thead>
            <tbody class="tbody">
                @if (Model == null || Model.Count == 0)
                {
                    <tr>
                        <td colspan="3">
                            <span>Không tìm thấy kết quả phù hợp</span>
                        </td>
                    </tr>
                }
                else
                {
                    for (int i = 0; i < Model.Count; i++)
                    {
                        var req = Model[i];
                        <tr class="tblrow">
                            <td>@(i + 1)</td>
                            <td>
                                <i class="fa fa-qrcode"></i><span>&nbsp;@(req.Id)</span>

                                @if (!string.IsNullOrEmpty(req.GeneralFullName))
                                {
                                    <br />
                                    <i class="fa fa fa-male"></i><span>&nbsp;@(req.GeneralFullName + (string.IsNullOrEmpty(req.GeneralShortName) ? "" : " (" + req.GeneralShortName + ")"))</span>
                                }

                                @if (!string.IsNullOrEmpty(req.ContactPhoneWork))
                                {
                                    <br />
                                    <i class="fa fa-phone"></i> <span>&nbsp;@(req.ContactPhoneWork)</span>
                                }

                                @if (!string.IsNullOrEmpty(req.GeneralEmail))
                                {
                                    <br />
                                    <i class="fa fa-envelope-o"></i><span>&nbsp;@(req.GeneralEmail)</span>
                                }


                            </td>
                            <td>
                                <input type="button" class="btn btn-success" value="Chọn" onclick="Customer.SelectCustomer('@req.Id','@req.GeneralFullName','@req.GeneralShortName','@req.ContactPhoneMobile','@req.GeneralEmail','@req.ContactName', '@req.Address', '@req.ProvinceId', '@req.DistrictId')">
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
