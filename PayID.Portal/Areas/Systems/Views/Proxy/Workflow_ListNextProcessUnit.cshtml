@model List<PayID.Portal.Models.NextUnit>

<form id="AssignForm">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h2 class="modal-title">Điều tin</h2>
    </div>
    <div class="modal-body" style="padding:15px !important;">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label>Đơn vị xử lý</label>
                    <select id="cbUnitProcess" class="form-control validate[required]" onchange="Shipment.ListPostMan(this.value)">
                        <option value="">Đơn vị xử lý</option>
                        @if (Model != null && Model.Count > 0)
                        {
                            foreach (var item in Model)
                            {
                                <option value="@item.Id" data-link="@item.UnitLink">@(item.Id + " - " + item.Name)</option>
                            }
                        }
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label>Bưu tá</label>
                    <select id="cbPostMan" class="form-control">
                        <option value="">---Bưu tá Thu gom---</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label>Nội dung</label>
                    <textarea id="noteUnitProcess" class="form-control"></textarea>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <a href="javascript:void(0)" id="btnUnitProcess" onclick="Shipment.Assign()" class="btn btn-primary ">Cập nhật</a>
        <button style="float: right;" type="button" class="btn btn-default btn-close" data-dismiss="modal">Hủy</button>
    </div>
</form>
