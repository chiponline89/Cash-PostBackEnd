@model List<PayID.Portal.Models.LogJourney>

<div class="table-responsive">
    <table id="tblcontent" class="table table-striped table-bordered datatables dataTable no-footer">
        <thead>
            <tr class="tr_head">
                <td>Thời gian</td>
                <td>Trạng thái</td>
                <td>Vị trí</td>
                <td>Ghi chú</td>
            </tr>
        </thead>
        <tbody class="tbody">
            @if (Model != null && Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    <tr class="tblrow">
                        <td>@item.DateCreate.AddHours(7).ToString("dd/MM/yyyy HH:mm:ss")</td>
                        <td>@item.Status</td>
                        <td>@item.Location</td>
                        <td>@item.Note</td>
                    </tr>
                }
            }
            else
            {
                <tr class="tblrow">
                    <td colspan="4"><span>Không tìm thấy dữ liệu</span></td>
                </tr>
            }
        </tbody>
    </table>
</div>
