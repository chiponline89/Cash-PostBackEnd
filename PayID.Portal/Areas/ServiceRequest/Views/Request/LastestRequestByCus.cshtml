@model List<PayID.Portal.Models.ShipmentAPI>

@if (Model != null && Model.Count > 0)
{

    <span class="label"> <span class="glyphicon glyphicon-info-sign"></span>Danh sách Tin gần nhất</span>
    <div class="table-responsive">
        <table id="tblcontent" class="table table-striped table-bordered datatables dataTable no-footer">
            <thead>
                <tr class="tr_head">
                    <td>#</td>
                    <td>Địa chỉ lấy hàng</td>
                    <td>Địa chỉ người nhận</td>
                    <td>Thông tin hàng hóa</td>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    var item = Model[i];
                    <tr>
                        <td>
                            @(i + 1)
                        </td>
                        <td>
                            <span style="background:burlywood;">@("Mã tin: " + item.Id)</span>
                            <br />
                            <span><i class="fa fa-male"></i> @item.FromAddress.ContactName</span>
                            <br />
                            <span><i class="fa fa-phone"></i> @item.FromAddress.ContactMobile</span>
                            <br />
                            <span><i class="fa fa-credit-card"></i> @item.FromAddress.FullAddress</span>
                        </td>
                        <td>
                            <span><i class="fa fa-male"></i> @item.ToAddress.ContactName</span>
                            <br />
                            <span><i class="fa fa-phone"></i> @item.ToAddress.ContactMobile</span>
                            <br />
                            <span><i class="fa fa-credit-card"></i> @item.ToAddress.FullAddress</span>
                        </td>
                        <td>
                            <span><i class="fa fa-caret-right" aria-hidden="true"></i> @item.Product.Name</span>
                            <br />
                            <span><i class="fa fa-caret-right" aria-hidden="true"></i>@item.Product.Value</span>
                            <br />
                            <span><i class="fa fa-caret-right" aria-hidden="true"></i> @item.Product.Description</span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
