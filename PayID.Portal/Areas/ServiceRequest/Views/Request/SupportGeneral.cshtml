<div class="row">
    <div class="form-horizontal" role="form">
        <div class="form-group">
            <label class="col-sm-3 control-label">Định danh KH</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="support_general_customer_code" placeholder="Mã KH">
            </div>
            <div class="col-sm-5">
                <input type="text" class="form-control" id="support_general_customer_email" placeholder="Địa chỉ email">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-3 control-label">Họ và tên</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="support_general_customer_name" placeholder="Họ và tên">
            </div>
            <label class="col-sm-2 control-label">Điện thoại</label>
            <div class="col-sm-3">
                <input type="text" id="support_general_customer_mobile" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label for="address" class="col-sm-3 control-label">Địa chỉ lấy hàng</label>
            <div class="col-sm-9">
                <input type="text" class="form-control forward-text" id="support_general_address" data-target="lblAddress" placeholder="Địa chỉ">
            </div>
        </div>
    </div>
</div>
<script>

    function createSupportGeneral() {
        $.ajax({
            url: '@Url.Content("~/ServiceRequest/Request/CreateSupportGeneralRequest")',
            type: 'POST',
            dataType: "json",            
            data: {
                customer_code: $('#support_general_customer_code').val(),
                customer_email: $('#support_general_customer_email').val(),
                customer_name: $('#support_general_customer_name').val(),
                customer_mobile: $('#support_general_customer_mobile').val(),
                customer_address: $('#support_general_address').val(),
                notes: $('#notes').val()
            },
            success: function (data) {
                alert(data.response_message)
            }
        });
    };
</script>